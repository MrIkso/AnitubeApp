<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_height="match_parent"
	android:layout_width="match_parent">
	<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
		android:id="@+id/swipeRefreshLayout"
		android:layout_width="match_parent"
		android:layout_height="match_parent">
		<LinearLayout
			android:layout_height="match_parent"
			android:layout_width="match_parent"
			android:orientation="vertical">
			<com.google.android.material.appbar.AppBarLayout
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				app:liftOnScroll="true"
				android:fitsSystemWindows="true"
				android:id="@+id/app_bar_layout">
				<RelativeLayout
					android:layout_width="fill_parent"
					android:layout_height="?actionBarSize"
				>
					<androidx.appcompat.widget.Toolbar
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_alignParentTop="true"
						app:contentInsetStart="0.0dip">
						<LinearLayout
							android:orientation="horizontal"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content">
							<ImageButton
								android:id="@+id/ib_back"
								android:background="?selectableItemBackgroundBorderless"
								android:layout_width="56.0dip"
								android:layout_height="56.0dip"
								android:layout_marginStart="8.0dip"
								app:srcCompat="@drawable/ic_back"
							 />
							<TextView
								android:textSize="18.0sp"
								android:textColor="@color/text"
								android:ellipsize="end"
								android:gravity="start|center"
								android:id="@+id/title"
								android:text="@string/nav_profile"
								android:background="@null"
								android:layout_width="0.0dip"
								android:layout_height="56.0dip"
								android:maxLines="1"
								android:includeFontPadding="false"
								android:layout_weight="1.0"
								android:alpha="0.9"
								android:fontFamily="@font/roboto_medium" />

							<ImageButton
								android:id="@+id/ib_settings"
								android:layout_width="56dp"
								android:layout_height="56dp"
								android:layout_marginEnd="10dp"
								android:background="?selectableItemBackgroundBorderless"
								app:srcCompat="@drawable/ic_settings"
								tools:ignore="ContentDescription,SpeakableTextPresentCheck" />
						</LinearLayout>
					</androidx.appcompat.widget.Toolbar>

				</RelativeLayout>
			</com.google.android.material.appbar.AppBarLayout>

			<androidx.core.widget.NestedScrollView
				android:id="@+id/nested_scroll_view"
				android:scrollbars="none"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:fillViewport="true"
				app:layout_behavior="@string/appbar_scrolling_view_behavior"
				android:overScrollMode="never">
				<FrameLayout
					android:id="@+id/content_frame"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent">
					<LinearLayout
						android:id="@+id/content"
						android:visibility="gone"
						android:layout_height="match_parent"
						android:layout_width="match_parent"
						android:orientation="vertical"
						android:layout_marginTop="15dp">

					<include
						android:id="@+id/layout_profile_header"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						layout="@layout/layout_profile_header" />

						<LinearLayout
							android:id="@+id/user_info_container"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:orientation="vertical"
							tools:visibility="visible">

							<TableLayout
								android:layout_width="match_parent"
								android:layout_height="match_parent"
								android:orientation="vertical"
								android:paddingStart="32dp"
								android:paddingTop="16dp"
								android:paddingEnd="32dp"
								android:paddingBottom="16dp">
								
								<TableRow
									android:visibility="gone"
									android:id="@+id/profile_profile_name_tr"
									android:layout_width="match_parent"
									android:layout_height="24dp"
									android:orientation="horizontal">

									<TextView
										android:layout_width="wrap_content"
										android:layout_height="wrap_content"
										android:alpha="0.58"
										android:text="@string/profile_name"
										android:textStyle="bold" />

									<TextView
										android:id="@+id/profile_name_tv"
										android:layout_width="0dp"
										android:layout_height="wrap_content"
										android:layout_weight="1"
										android:textAlignment="textEnd" />
								</TableRow>
								<TableRow
									android:id="@+id/profile_city_tr"
									android:visibility="gone"
									android:layout_width="match_parent"
									android:layout_height="24dp"
									android:orientation="horizontal">

									<TextView
										android:layout_width="wrap_content"
										android:layout_height="wrap_content"
										android:alpha="0.58"
										android:text="@string/profile_city"
										android:textStyle="bold" />

									<TextView
										android:id="@+id/profile_city_tv"
										android:layout_width="0dp"
										android:layout_height="wrap_content"
										android:layout_weight="1"
										android:textAlignment="textEnd" />
								</TableRow>

								<TableRow
									android:layout_width="match_parent"
									android:layout_height="24dp"
									android:orientation="horizontal">

									<TextView
										android:layout_width="wrap_content"
										android:layout_height="wrap_content"
										android:alpha="0.58"
										android:text="@string/profile_register_date"
										android:textStyle="bold" />

									<TextView
										android:id="@+id/profile_register_date_tv"
										android:layout_width="0dp"
										android:layout_height="wrap_content"
										android:layout_weight="1"
										android:textAlignment="textEnd" />
								</TableRow>
								<TableRow
									android:layout_width="match_parent"
									android:layout_height="24dp"
									android:orientation="horizontal">

									<TextView
										android:layout_width="wrap_content"
										android:layout_height="wrap_content"
										android:alpha="0.58"
										android:text="@string/profile_last_activity"
										android:textStyle="bold" />

									<TextView
										android:id="@+id/profile_last_activity_tv"
										android:layout_width="0dp"
										android:layout_height="wrap_content"
										android:layout_weight="1"
										android:textAlignment="textEnd" />
								</TableRow>

								<TableRow
									android:id="@+id/profile_info_tr"
									android:visibility="gone"
									android:layout_width="match_parent"
									android:layout_height="24dp"
									android:orientation="horizontal">

									<TextView
										android:layout_width="wrap_content"
										android:layout_height="wrap_content"
										android:alpha="0.58"
										android:text="@string/profile_info"
										android:textStyle="bold" />

									<TextView
										android:id="@+id/profile_info_tv"
										android:layout_width="0dp"
										android:layout_height="wrap_content"
										android:layout_weight="1"
										android:textAlignment="textEnd" />
								</TableRow>

								<TableRow
									android:id="@+id/profile_status_tr"
									android:visibility="gone"
									android:layout_width="match_parent"
									android:layout_height="24dp"
									android:orientation="horizontal">

									<TextView
										android:layout_width="wrap_content"
										android:layout_height="wrap_content"
										android:alpha="0.58"
										android:text="@string/profile_status"
										android:textStyle="bold" />

									<TextView
										android:id="@+id/profile_status_tv"
										android:layout_width="0dp"
										android:layout_height="wrap_content"
										android:layout_weight="1"
										android:textAlignment="textEnd" />
								</TableRow>

							</TableLayout>
						</LinearLayout>

						<Button
							android:layout_height="wrap_content"
							android:layout_width="wrap_content"
							android:ellipsize="end"
							style="@style/Widget.Material3.Button.OutlinedButton.Icon"
							android:layout_marginTop="15dp"
							android:id="@+id/logout_btn"
							android:layout_gravity="center"
							android:text="@string/profile_logout" />

						<Button
							android:layout_height="wrap_content"
							android:layout_width="wrap_content"
							android:visibility="gone"
							android:ellipsize="end"
							style="@style/Widget.Material3.Button.OutlinedButton.Icon"
							android:id="@+id/edit_profile_btn"
							android:layout_gravity="center"
							android:text="@string/profile_edit" />

					</LinearLayout>

					<include
						android:layout_gravity="center"
						android:id="@+id/load_state_layout"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						layout="@layout/load_state_layout" />
				</FrameLayout>
			</androidx.core.widget.NestedScrollView>
		</LinearLayout>
	</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</FrameLayout>