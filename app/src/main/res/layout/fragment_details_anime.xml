<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/details_frame"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
		android:id="@+id/swipeRefreshLayout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">

		<androidx.core.widget.NestedScrollView
			android:id="@+id/nested_scroll_view"
			android:scrollbars="none"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:fillViewport="true">
			<FrameLayout
				android:id="@+id/content_frame"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
				<androidx.constraintlayout.widget.ConstraintLayout
					android:id="@+id/cl_content"
					android:visibility="gone"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">
					<androidx.constraintlayout.widget.Guideline
						android:orientation="horizontal"
						android:id="@+id/gl_poster"
						android:layout_width="match_parent"
						android:layout_height="0dp"
						app:layout_constraintGuide_begin="372dp" />
					<FrameLayout
						android:id="@+id/poster_frame"
						android:layout_width="match_parent"
						android:layout_height="0dp"
						app:layout_constraintBottom_toTopOf="@+id/gl_poster"
						app:layout_constraintEnd_toEndOf="parent"
						app:layout_constraintStart_toStartOf="parent"
						app:layout_constraintTop_toTopOf="parent">
						<androidx.appcompat.widget.AppCompatImageView
							android:id="@+id/poster_bg"
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:scaleType="centerCrop"
							android:alpha="0.15" />
						<androidx.appcompat.widget.AppCompatImageView
							android:layout_gravity="top"
							android:id="@+id/gradient_top"
							android:background="@drawable/gradient_top_background"
							android:layout_width="match_parent"
							android:layout_height="@dimen/gradient_height" />
						<androidx.appcompat.widget.AppCompatImageView
							android:layout_gravity="bottom"
							android:id="@+id/gradient_bottom"
							android:background="@drawable/gradient_bottom_background"
							android:layout_width="match_parent"
							android:layout_height="@dimen/gradient_height" />
						<androidx.cardview.widget.CardView
							android:layout_gravity="center"
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:layout_marginLeft="78dp"
							android:layout_marginTop="@dimen/layout_margin_top"
							android:layout_marginRight="78dp"
							android:layout_marginBottom="@dimen/layout_margin_bottom"
							android:layout_marginHorizontal="78dp"
							app:cardCornerRadius="@dimen/main_radius"
							app:cardElevation="8dp">
							<com.google.android.material.imageview.ShapeableImageView
								android:id="@+id/poster"
								android:layout_width="match_parent"
								android:layout_height="match_parent"
								android:scaleType="centerCrop" />
						</androidx.cardview.widget.CardView>
					</FrameLayout>

					<LinearLayout
						android:gravity="center"
						android:orientation="horizontal"
						android:id="@+id/ll_score"
						android:visibility="gone"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						app:layout_constraintEnd_toEndOf="parent"
						app:layout_constraintStart_toStartOf="parent"
						app:layout_constraintTop_toBottomOf="@+id/gl_poster">
						<RatingBar
							android:id="@+id/rb_score"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:numStars="5"
							android:rating="5.0"
							android:stepSize="0.1"
							android:scaleX="1.25"
							android:scaleY="1.25"
							android:progressTint="?attr/colorAccent"
							android:secondaryProgressTint="?attr/colorAccent"
							style="@style/Widget.AppCompat.RatingBar.Small" />
						<TextView
							android:id="@+id/tv_score"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:includeFontPadding="false"
							android:layout_marginStart="18dp"
							style="@style/TextLabel" />
					</LinearLayout>

					<LinearLayout
						android:orientation="vertical"
						android:id="@+id/ll_title"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginLeft="32dp"
						android:layout_marginTop="8dp"
						android:layout_marginRight="32dp"
						android:layout_marginHorizontal="32dp"
						app:layout_constraintEnd_toEndOf="parent"
						app:layout_constraintStart_toStartOf="parent"
						app:layout_constraintTop_toBottomOf="@+id/ll_score">
						<TextView
							android:textSize="20sp"
							android:textColor="@color/text"
							android:ellipsize="end"
							android:gravity="center"
							android:id="@+id/title"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:maxLines="3"
							android:fontFamily="@font/roboto_bold" />
						<TextView
							android:ellipsize="end"
							android:gravity="center"
							android:visibility="gone"
							android:id="@+id/title_eng"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginTop="4dp"
							android:maxLines="1"
							style="@style/TextLabelAlpha" />
					</LinearLayout>

					<LinearLayout
						android:id="@+id/details_ll"
						android:orientation="vertical"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginBottom="@dimen/layout_margin_bottom"
						app:layout_constraintBottom_toBottomOf="parent"
						app:layout_constraintEnd_toEndOf="parent"
						app:layout_constraintStart_toStartOf="parent"
						app:layout_constraintTop_toBottomOf="@+id/ll_title">
						<com.google.android.material.button.MaterialButton
							android:id="@+id/fab_watch"
							style="@style/Widget.Material3.Button.Icon"
							android:layout_marginTop="10.0dip"
							android:layout_marginBottom="10.0dip"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_gravity="center_horizontal"
							android:text="@string/play"
							app:icon="@drawable/ic_play_24"
							android:textAllCaps="false"
							android:elevation="4.0dip"
							app:cornerRadius="16.0dip"
						 />
						<include
							android:id="@+id/layout_info"
							layout="@layout/layout_info"
							style="@style/layout_detail_item" />
						<include
							android:id="@+id/layout_description"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginLeft="16dp"
							android:layout_marginRight="16dp"
							android:layout_marginHorizontal="16dp"
							layout="@layout/layout_description"
							style="@style/layout_detail_item" />
						<include
							android:id="@+id/layout_trailer"
							layout="@layout/layout_trailer_video"
							style="@style/layout_detail_item" />
						<include
							android:id="@+id/layout_screenshots"
							layout="@layout/layout_screenshots"
							style="@style/layout_detail_item" />
						<include
							android:id="@+id/layout_similar"
							layout="@layout/layout_similar"
							style="@style/layout_detail_item" />
					</LinearLayout>
				</androidx.constraintlayout.widget.ConstraintLayout>
				<include
					android:layout_gravity="center"
					android:id="@+id/load_state_layout"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					layout="@layout/load_state_layout" />
			</FrameLayout>
		</androidx.core.widget.NestedScrollView>
	</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

	<com.google.android.material.floatingactionbutton.FloatingActionButton
		android:id="@+id/fab_back"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="8dp"
		android:layout_marginStart="12dp"
		app:backgroundTint="@color/ui_bg"
		app:borderWidth="0dp"
		app:elevation="2dp"
		app:fabCustomSize="42dp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlayExtended"
		app:srcCompat="@drawable/ic_back_24"
		app:tint="@color/iconColor"
		style="style/ShapeAppearanceOverlayExtended" />

</FrameLayout>
