<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	 xmlns:android="http://schemas.android.com/apk/res/android"
	 xmlns:app="http://schemas.android.com/apk/res-auto"
	 android:layout_height="wrap_content"
	 android:layout_width="fill_parent"
	 android:paddingEnd="12.0dip"
	 android:background="?attr/selectableItemBackground"
	 android:clickable="true"
	 android:orientation="horizontal"
	 android:baselineAligned="false"
	 android:paddingBottom="8.0dip"
	 android:paddingStart="12.0dip"
	 android:layout_marginTop="8dp"
	 android:focusable="true">

	<androidx.cardview.widget.CardView
		 android:layout_height="wrap_content"
		 android:layout_width="wrap_content"
		 android:layout_marginBottom="8.0dip"
		 app:cardElevation="0dp"
		 android:backgroundTint="@android:color/transparent"
		 android:layout_marginTop="8.0dip"
		 android:id="@+id/card_view">

		<RelativeLayout
			 android:layout_height="158.0dip"
			 android:layout_width="114.0dip"
			 android:animateLayoutChanges="true">

			<com.google.android.material.imageview.ShapeableImageView
				 android:layout_height="fill_parent"
				 android:layout_width="fill_parent"
				 android:scaleType="centerCrop"
				 app:shapeAppearanceOverlay="@style/CardViewShapeableImageView"
				 android:layout_alignParentLeft="true"
				 android:layout_alignParentStart="true"
				 android:layout_alignParentTop="true"
				 android:id="@+id/poster" />

			<RelativeLayout
				 android:layout_height="20.0dip"
				 android:layout_width="wrap_content"
				 android:visibility="gone"
				 android:gravity="center"
				 android:background="@color/anime_status_plan_to_watch"
				 android:layout_alignLeft="@+id/poster"
				 android:id="@+id/status_layout">

				<TextView
					 android:layout_height="wrap_content"
					 android:layout_width="wrap_content"
					 android:gravity="center"
					 android:paddingRight="5dp"
					 android:ellipsize="end"
					 android:textSize="12sp"
					 android:paddingLeft="5dp"
					 android:textColor="@color/white"
					 android:maxLines="1"
					 android:text="@string/anime_status_will"
					 android:id="@+id/status" />

			</RelativeLayout>

		</RelativeLayout>

	</androidx.cardview.widget.CardView>

	<LinearLayout
		 android:layout_height="wrap_content"
		 android:layout_width="fill_parent"
		 android:orientation="vertical"
		 android:layout_marginTop="4.0dip"
		 android:layout_marginStart="24.0dip">

		<LinearLayout
			 android:layout_height="wrap_content"
			 android:layout_width="fill_parent">

			<TextView
				 android:layout_height="wrap_content"
				 android:layout_width="wrap_content"
				 android:ellipsize="end"
				 android:textSize="16.0sp"
				 android:fontFamily="@font/roboto_medium"
				 android:maxLines="2"
				 android:layout_weight="1.0"
				 android:id="@+id/title" />

		</LinearLayout>

		<LinearLayout
			 android:layout_height="wrap_content"
			 android:layout_width="wrap_content"
			 android:gravity="center_vertical"
			 android:orientation="horizontal"
			 android:layout_marginTop="2.0dip">

			<TextView
				 android:layout_height="wrap_content"
				 android:layout_width="wrap_content"
				 android:ellipsize="end"
				 android:textSize="14.0sp"
				 android:maxLines="2"
				 android:id="@+id/episodes" />

			<TextView
				 android:layout_height="wrap_content"
				 android:layout_width="wrap_content"
				 android:paddingRight="8.0dip"
				 android:textSize="14.0sp"
				 android:paddingLeft="8.0dip"
				 android:textStyle="bold"
				 android:id="@+id/dot"
				 android:text="â€¢" />

			<TextView
				 android:layout_height="wrap_content"
				 android:layout_width="wrap_content"
				 android:textSize="14.0sp"
				 android:id="@+id/year" />

			<TextView
				 android:layout_height="wrap_content"
				 android:layout_width="wrap_content"
				 android:visibility="gone"
				 android:paddingRight="8.0dip"
				 android:textSize="14.0sp"
				 android:paddingLeft="8.0dip"
				 android:textStyle="bold"
				 android:id="@+id/rating"
				 android:text="9.2" />

		</LinearLayout>

		<TextView
			 android:layout_height="wrap_content"
			 android:layout_width="fill_parent"
			 android:ellipsize="end"
			 android:textSize="12.5sp"
			 android:layout_marginTop="2.0dip"
			 android:maxLines="4"
			 android:lineSpacingExtra="2.0sp"
			 android:id="@+id/description" />

	</LinearLayout>

</LinearLayout>