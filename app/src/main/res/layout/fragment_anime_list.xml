<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:id="@+id/anime_list_frame">

	<androidx.coordinatorlayout.widget.CoordinatorLayout
		android:id="@id/container"
		android:visibility="gone"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
	>
		<com.google.android.material.appbar.AppBarLayout
			android:id="@+id/appbar"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			app:elevation="0.0dip"
		>
			<androidx.appcompat.widget.Toolbar
				android:layout_width="fill_parent"
				android:layout_height="?actionBarSize"
				android:paddingStart="0.0dip"
				android:paddingEnd="0.0dip"
				app:contentInsetStart="0.0dip"
				app:layout_scrollFlags="scroll|enterAlways"
			>
				<include
					android:id="@+id/layout_toolbar"
					layout="@layout/layout_toolbar" />
			</androidx.appcompat.widget.Toolbar>

		</com.google.android.material.appbar.AppBarLayout>

		<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
			android:id="@+id/swipe_refresh_layout"
			android:layout_height="match_parent"
			android:layout_width="fill_parent"
			app:layout_behavior="@string/appbar_scrolling_view_behavior"
		>
			<LinearLayout
				android:id="@+id/anime_list_content"
				android:orientation="vertical"
				android:paddingTop="8.0dip"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content">


				<androidx.recyclerview.widget.RecyclerView
					android:layout_height="match_parent"
					android:layout_width="fill_parent"
					android:orientation="vertical"
					app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
					android:id="@+id/anime_list_recycler_view" />

				<View
					android:id="@+id/spacer"
					android:layout_height="0.5dip"
					android:layout_width="wrap_content"
					android:layout_marginEnd="16.0dip"
					android:layout_marginTop="16.0dip"
					android:layout_marginStart="16.0dip" />
			</LinearLayout>
		</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
	</androidx.coordinatorlayout.widget.CoordinatorLayout>

	<include
		android:id="@+id/load_state_layout"
		layout="@layout/load_state_layout" />

</FrameLayout>
